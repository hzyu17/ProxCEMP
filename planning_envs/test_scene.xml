<mujoco model="test_model">
  <worldbody>
    <geom name="floor" type="plane" size="0 0 1" pos="0 0 0" rgba="0.9 0.9 0.9 1"/>
    
    <body name="robot_body" pos="0 0 0.5">
        <inertial pos="0 0 0" mass="1" diaginertia="0.1 0.1 0.1" />
        <joint name="x_joint" type="slide" axis="1 0 0" />
        <joint name="y_joint" type="slide" axis="0 1 0" />
        <joint name="z_joint" type="slide" axis="0 0 1" />
        <geom name="robot_geom" type="sphere" size="0.1" rgba="1.0 0 1.0 1" mass="1.0" />
    </body>
  </worldbody>
  
  <actuator>
      <motor name="force_x" joint="x_joint" ctrlrange="-10 10" />
      <motor name="force_y" joint="y_joint" ctrlrange="-10 10" />
      <motor name="force_z" joint="z_joint" ctrlrange="-10 10" />
  </actuator>
</mujoco>