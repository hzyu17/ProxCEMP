<mujoco model="Quadrotor">
  <worldbody>
    <light pos="0 0 1"/>
    <geom name="floor" type="plane" size="10 10 0.1" rgba=".5 .5 .5 1"/>
    <body name="quadrotor_base" pos="0 0 1">
      <joint name="free_joint" type="free"/>
      <geom name="body" type="box" size=".2 .2 .1" rgba="0 1 0 1"/>
      <site name="site_x" pos="0 0 0" euler="0 90 0"/>
      <site name="site_y" pos="0 0 0" euler="-90 0 0"/>
      <site name="site_z" pos="0 0 0"/>
    </body>
  </worldbody>

  <actuator>
    <motor name="force_x" site="site_x"/>
    <motor name="force_y" site="site_y"/>
    <motor name="force_z" site="site_z"/>
  </actuator>
</mujoco>